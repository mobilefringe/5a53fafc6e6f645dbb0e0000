<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            // var repo = getRepoDetailsByName("Events Banner");
            // if (repo != undefined) {
            //     var banner = getImageURL(repo.images[0].photo_url);
            //     $(".inside_banner").css({backgroundImage: "url(" + banner + ")"});
            // }
            
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            event_details = getEventDetailsBySlug(slug);
            
            renderEventDetails('#promo_header_container', '#promo_header_template', event_details)
            renderEventDetails('#promo_details_container', '#promo_details_template', event_details)
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    });
</script>