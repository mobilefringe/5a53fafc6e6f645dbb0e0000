            //         obj["popover"] = "<p class='popover_name'>"+val.name+"</p><a href="+ val.leasing + "> View Spec Document </a>"
            //         // obj["attr"] = {}
            //         // obj["attr"]["href"] = "/stores/"+val.slug
            //         regions[val.svgmap_region] = obj
