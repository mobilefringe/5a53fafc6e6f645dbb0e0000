            $('.map_pin_a').click(function(e){
                e.preventDefault();
                var id = $(this).attr('data-value');
                map_pin(id, e);
            })
            
            function map_pin(value, e){
                map.marksHide();
                value = value.split('/')
                if (value[0] != null){
                    store = getStoreDetailsBySlug(value[1]);
                    drop_pin(value[0], map, store, e);    
                }
            }
            // init_map(reg);
        }
        function drop_pin(id, map, store, e){
        console.log("store", store);
        var coords = map.get_coords(id);
        var height = parseInt(coords["height"])
        var width = parseInt(coords["width"])
        var x_offset = (parseInt(width) / 2);
        var y_offset = (parseInt(height) /2);
        $("#"+id).click();
        // map.showPopover(e,"<p class='popover_name'>"+store.name+"</p><a href="+ store.slug + "> View Spec Document </a>",[coords["x"], coords["y"] ]);
        
        // map.setMarks([{ xy: [coords["x"] - 15 + x_offset, coords["y"] - 55 + y_offset],
